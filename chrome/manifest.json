{
  "name": "Squinty",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["squinty.js"]
    }
  ],

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Squinty",
      "default_icon": "icon19.png",
      "default_popup": "squinty.html"
  },
  "manifest_version": 2,

  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
